@{
    Layout = "_MajorLayout";
}

	<div class="contact-me">
	    <div class="contact-me-h3">
	        <h3>CONTACT ME</h3>
	    </div>
	    <div class="contact-me-hr">
	        <hr/>
	    </div>
	    <div class="contact-me-p">
	        <p>It is a long established fact that a reader will be distracted by the <br>
	            readable content of a 
	            page when looking at its layout.
	        </p>
	    </div>
	</div>
	<div class="fields">
		<div class="form">
			<form>
				<div class="your-name">
					<input type="name" name="name" placeholder="   Your Name">
				</div>
				<div class="your-email">
					<input type="email" name="email" placeholder="   Your Email">
				</div>
				<div class="subject">
					<input type="text" name="subject" placeholder="   Subject">
				</div>
				<div class="your-message">
					<textarea name="message" placeholder=" Your Message" rows="5">
					</textarea>
				</div>
				<div class="submit">
					<button type="submit" name="submit" class="submit-button">Send Message</button> 
				</div>
			</form>
		</div>
	</div>